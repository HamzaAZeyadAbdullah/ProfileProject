@model ProfileProject.Models.Domain.ApplicationUser
@{
   
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Project</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>


        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="UserName"></label>
            <select asp-for="UserName" class="form-control">
                <option>Yes</option>
                <option>No</option>
            </select>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>


        <br />
        <hr />
        <button type="submit" class="btn btn-primary" style="width:150px">Save</button>
        <a asp-action="Index" asp-controller="User" class="btn btn-secondary" style="width:150px">
            back to Projects
        </a>
    </div>
</form>





